# GLPI Environment Configuration
# Copy this file to .env and fill in the values
# DO NOT commit .env to version control

# PostgreSQL Database Configuration
# Note: This should point to the existing PostgreSQL instance on the host
# Check if PostgreSQL is running in a container or directly on the host
# If in container: use container name (e.g., postgres)
# If on host: use host.docker.internal or the server's IP
POSTGRES_HOST=host.docker.internal
POSTGRES_PORT=5432
POSTGRES_DB=glpi
POSTGRES_USER=glpi_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Resend SMTP Configuration
# Configure these in GLPI UI after deployment
# Setup > General > Notifications > Email followups configuration
RESEND_API_KEY=re_YOUR_API_KEY_HERE
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_ENCRYPTION=tls
SMTP_USERNAME=resend
SMTP_FROM_EMAIL=support@bluemoonit.com.au
SMTP_FROM_NAME=Blue Moon IT Support
